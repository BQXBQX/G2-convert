{
	"compilerOptions": {
		"target": "es2016",
		"module": "esnext",
		"lib": ["dom", "esnext"],
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"declarationDir": "./dist/types",
		"declaration": true
	}
}
